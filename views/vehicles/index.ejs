<%- include('../partials/header'); -%>

<% if(currentUser && currentUser.isAdmin) { %>
<h1>You are Admin </h1>
<% } %>

<div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome </h1>
             <p>View Vehicles</p>
             <p>
                <a class="btn btn-primary btn-large" href="/vehicles/new">Add New Vehicle</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% vehicles.forEach(function(vehicle){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= vehicle.image %>">
                   <div class="caption">
                       <h4><%= vehicle.name %></h4>
                   </div>
                   <p>
                       <a href="/vehicles/<%= vehicle._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include('../partials/footer'); -%>